
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}


<div class="row">
    <!-- Encabezado -->
    <div class="col-12 mb-4">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-clinic-medical text-primary mr-2"></i>CLINICA SANNA
            </h1>
            <span class="badge badge-pill badge-light shadow-sm">
                <i class="fas fa-fw fa-user-injured text-info mr-1"></i>
                @($"{ViewBag.Paciente?.NombreUsuario} {ViewBag.Paciente?.ApellidoUsuario}")
            </span>
        </div>
        <hr class="mt-2 mb-4 border-top-2 border-primary">
    </div>
</div>

